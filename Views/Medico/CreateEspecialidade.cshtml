@model Unidades_De_Saude.ModelViewModel.EspecialidadesViewModel

@{
    ViewData["Title"] = "CreateEspecialidade";
}

<h1>CreateEspecialidade</h1>

<h4>EspecialidadesViewModel</h4>
<hr />

<form asp-action="CreateEspecialidade">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>

            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Enviar" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
   tinymce.init({
  selector: 'textarea#Descricao',
  language: 'pt_BR'
  });

</script>
}
